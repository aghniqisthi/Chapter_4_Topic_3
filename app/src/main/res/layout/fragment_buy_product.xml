<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="produk"
            type="com.example.chapter4topic3.Product" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BuyProductFragment">

        <!-- TODO: Update blank fragment layout -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_margin="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/judullayout"
                android:text="DETAIL PRODUCT"
                android:textSize="24sp"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageBuy"
                app:imageResource="@{produk.img}"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_margin="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/judullayout" />

            <TextView
                android:id="@+id/namaBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{produk.nama}"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageBuy" />

            <TextView
                android:id="@+id/hargaBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{'$' + Integer.toString(produk.harga)}"
                android:textSize="20sp"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/namaBuy" />

            <TextView
                android:id="@+id/descBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{produk.desc}"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hargaBuy" />

            <Button
                android:id="@+id/btnBuy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BUY"
                android:fontFamily="sans-serif"
                android:backgroundTint="@color/tosca_pastel"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/descBuy" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>